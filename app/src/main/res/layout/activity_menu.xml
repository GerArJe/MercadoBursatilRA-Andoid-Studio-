<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenuActivity"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/learn_and_invest"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="@dimen/width_btn_menu"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius"
        android:text="@string/text_btn_AR"
        />
    <Button
        android:layout_width="@dimen/width_btn_menu"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius"
        android:text="@string/text_btn_resources"
        android:layout_marginTop="@dimen/marginTop_btn_menu"
        />
    <Button
        android:layout_width="@dimen/width_btn_menu"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius"
        android:text="@string/text_btn_glosario"
        android:layout_marginTop="@dimen/marginTop_btn_menu"
        />
    <Button
        android:layout_width="@dimen/width_btn_menu"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius"
        android:text="@string/text_btn_creditos"
        android:layout_marginTop="@dimen/marginTop_btn_menu"
        />


</LinearLayout>